<resources>
    <declare-styleable name="MultiStateLayout">
        <attr name="empty_layout" format="reference"/>
        <attr name="loading_layout" format="reference"/>
        <attr name="error_layout" format="reference"/>
        <attr name="network_error_layout" format="reference"/>
        <attr name="state" format="enum">
            <enum name="normal"        value="0"/>
            <enum name="empty"         value="1"/>
            <enum name="loading"       value="2"/>
            <enum name="error"         value="3"/>
            <enum name="network_error" value="4"/>
        </attr>
    </declare-styleable>
</resources>
